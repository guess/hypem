<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/green_500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/green_800</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/green_A700</item>
        <!-- Hide action bar when now playing screen is open -->
        <item name="android:windowActionBarOverlay">true</item>
    </style>
</resources>
